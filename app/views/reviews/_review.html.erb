

 <div class="review">

	<div class="review-rating" data-score="<%= review.rating %>"></div>
	<p class="review-comment"><%= review.comment %></p>


	<% if user_signed_in? %>

		<% if review.user_id == current_user.id %>

			<div class="links btn-group">

				<%= link_to "Изменить", edit_swimmer_review_path(review.swimmer, review), class: "btn btn-custom" %>
				<%= link_to "Удалить", swimmer_review_path(review.swimmer, review), method: :delete, data: { confirm: "Вы уверены?" }, class: "btn btn-custom" %>

			</div>
		
		<% end %>	

	<% end %>

</div>		