<div class="col-md-6 col-md-offset-3">

	<div class="edit-book-form">


<%= simple_form_for @swimmer,:html => { :multipart => true } do |f| %>
	<%= f.select :category_id, @categories %> <!-- измененно по сравнению с форм -->
	<%= f.file_field :swimmer_img %>
	<%= f.input :name, label: "Имя спортсмена" %>
	<%= f.input :description, label: "Информация о спортсмене"%>
	<%= f.input :coach , label: "Имя тренера"%>
	<%= f.button :submit, "Сохранить" , :class => 'btn-custom2' %>

<% end %>
		
</div>

</div>